@model Reading.Models.User
@{
    ViewBag.Title = "账号注册";
}



@using (Html.BeginForm())
{

    <div class="row" style="margin-top:60px;">
        <div class="col-md-6" style="margin:100px 410px;">
            <div class="col-md-8">
                <br>    
                <h3>账号注册</h3>
                <br>
                <div class="input-group input-group-md">
                    <label class="input-tips" for="u">帐号：</label>
                    <span class="input-group-addon" id="sizing-addonl">
                        <i class="glyphicon glyphicon-user" aria-hidden="true"></i>
                    </span>
                    @Html.TextBoxFor(model => model.userId, htmlAttributes: new { @class = "form-control" })
                    
                </div>
                <a style="color:red; float:right">@Session["Register"]</a> 
                <br />
                <div class="input-group input-group-md">
                    <label class="input-tips" for="u">密码：</label>
                    <span class="input-group-addon" id="sizing-addonl">
                        <i class="glyphicon glyphicon-lock"></i>
                    </span>
                    @Html.TextBoxFor(model => model.password, htmlAttributes: new { @class = "form-control", @type = "password" })
                </div>
                <br />
                <center><button type="submit" class="btn btn-success btn-block" style="background-color:#d0d0d0;color:black;border:none;" >注册</button></center>
                <br />
                <div style="text-align:center">
                </div>

            </div>
        </div>
    </div>
}